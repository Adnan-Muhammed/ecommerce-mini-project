            <script>
                const timerElement = document.getElementById('timer');
                let seconds = 30; // Set the initial timer value in seconds
                let otpExpired = false; // Flag to track OTP expiration
                
                function updateTimer() {
                    timerElement.innerText = `left: ${seconds} seconds`;
                
                    if (seconds > 0) {
                        seconds--;
                        setTimeout(updateTimer, 1000); // Update the timer every second
                    } else {
                        timerElement.innerText = 'its Expired';
                        otpExpired = true;
                        // Handle timer expiration actions here
                        updateButtonLabel();
                        updateResendLink();
                    }
                }
                
                function updateButtonLabel() {
                    const submitButton = document.getElementById('submitButton');
                    if (otpExpired) {
                        submitButton.value = 'Resend';
                    } else {
                        submitButton.value = 'Send';
                    }
                }
                
                function updateResendLink() {
                    const resendLink = document.getElementById('RecoverPassword');
                    if (otpExpired) {
                        resendLink.href = '/resendOtp';
                    } else {
                        // Set the default link when the timer is active (you can change '#' to your default link)
                        resendLink.href = '#'; // Change this to the default link
                    }
                }
                
                // Start the timer when the page loads or as needed
                updateTimer();
                
                const submitButton = document.getElementById('submitButton');
                
                submitButton.addEventListener('click', function(event) {
                    if (otpExpired) {
                        event.preventDefault(); // Prevent default form submission
                        window.location.href = '/resendOtp'; // Redirect to /resendOtp
                    } else {
                        // No need to prevent default behavior if the label is "Send"
                        // The form will submit to /otpverified by default
                    }
                });
                
                // Update button label and resend link when the page loads
                updateButtonLabel();
                updateResendLink();
                </script>






