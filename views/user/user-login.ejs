<script>

    setTimeout(()=>{
        const AlertDiv=document.querySelector('.errorAlert')
        if(AlertDiv){
            AlertDiv.remove()
        }
    },3000)
   </script>

   
    
<script>
    
  document.getElementById("CustomerLoginForm").addEventListener("submit", function(event) {
    event.preventDefault();

    const email = document.getElementById("CustomerEmail").value.trim();
    const password = document.getElementById("CustomerPassword").value.trim();

    const emailFormat = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

    if (email === "") {
      document.querySelector("#CustomerEmail + .class").textContent = "Email field is empty. It's required.";
    } else if (!email.match(emailFormat)) {
      document.querySelector("#CustomerEmail + .class").textContent = "Please enter a valid email address.";
    } else {
      document.querySelector("#CustomerEmail + .class").textContent = "";
    }

    if (password === "") {
      document.querySelector("#CustomerPassword + .class").textContent = "Password field is empty. It's required.";
    } else if (password.length < 8) {
      document.querySelector("#CustomerPassword + .class").textContent = "Password must be at least 8 characters long.";
    } else {
      document.querySelector("#CustomerPassword + .class").textContent = "";
    }

    // If there are no error messages, submit the form
    const emailError = document.querySelector("#CustomerEmail + .class").textContent;
    const passwordError = document.querySelector("#CustomerPassword + .class").textContent;

    if (emailError === "" && passwordError === "") {
      this.submit();
    }
  });
</script>



   
   
  

   
