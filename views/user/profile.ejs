<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            margin: 0;
        }

        #sidebar {
            height: 100vh; /* 100% of the viewport height */
            width: 200px;
            background-color: #f1f1f1;
            padding: 20px;
            box-sizing: border-box;
        }

        #content {
            flex: 1;
            padding: 20px;
        }

        .profile-box {
            display: none;
            border: 1px solid #ccc;
            padding: 20px;
            margin-bottom: 20px;
            box-sizing: border-box;
        }

        h2 {
            color: #333;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            box-sizing: border-box;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border: none;
            cursor: pointer;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            margin-bottom: 10px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        /* Adjust form width to 1/3 of the container */
        #add-address form {
            width: 33.33%;
        }

        /* Style form fields horizontally */
        #add-address form label, #add-address form input {
            display: inline-block;
            margin-bottom: 10px;
        }

        /* Password visibility toggle */
        .password-toggle {
            display: inline-block;
            cursor: pointer;
            color: #4CAF50;
            margin-left: 10px;
        }
    </style>
</head>
<body>

    <div id="sidebar">
        <ul>
            <li><button onclick="showSection('user-info')">User Information</button></li>
            <li><button onclick="showSection('add-address')">Add Address</button></li>
            <li><button onclick="showSection('orders-list')">Orders List</button></li>
            <li><button onclick="showSection('cart-list')">Cart List</button></li>
            <li><button onclick="showSection('wishlist')">Wishlist</button></li>
            <li><button onclick="showSection('coupons')">Coupons</button></li>
            <li><button onclick="showSection('wallet')">Wallet</button></li>
        </ul>
    </div>

    <div id="content">
        <div id="user-info" class="profile-box">
            <h2>User Information</h2>
            <table>
                <tr>
                    <th>Field</th>
                    <th>Details</th>
                </tr>
                <tr>
                    <td>Username</td>
                    <td>DummyUsername</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>dummy.email@example.com</td>
                </tr>
                <tr>
                    <td>Password</td>
                    <td>
                        12345678
                        <button type="button" onclick="togglePasswordVisibility('user-password')">Show/Hide Password</button>
                    </td>
                </tr>
            </table>
        </div>

        <div id="add-address" class="profile-box">
            <h2>Address</h2>
            <h3>Default Address</h3>
            <table>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>E-Mail</th>
                    <th>Telephone</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>Post Code</th>
                    <th>Region / State</th>
                    <th>Country</th>
                </tr>
                <tr>
                    <td>John</td>
                    <td>Doe</td>
                    <td>john.doe@example.com</td>
                    <td>+1234567890</td>
                    <td>123 Main St</td>
                    <td>Cityville</td>
                    <td>12345</td>
                    <td>Region</td>
                    <td>Country</td>
                </tr>
            </table>
            
            <h3>Add Another Address</h3>
            <form>
                <label for="first-name">First Name:</label>
                <input type="text" id="first-name" name="first-name" placeholder="John" required>

                <label for="last-name">Last Name:</label>
                <input type="text" id="last-name" name="last-name" placeholder="Doe" required>

                <label for="email">E-Mail:</label>
                <input type="email" id="email" name="email" placeholder="john.doe@example.com" required>

                <label for="phone-number">Telephone:</label>
                <input type="tel" id="phone-number" name="phone-number" placeholder="+1234567890" required>

                <label for="address">Address:</label>
                <input type="text" id="address" name="address" placeholder="123 Main St" required>

                <label for="city">City:</label>
                <input type="text" id="city" name="city" placeholder="Cityville" required>

                <label for="post-code">Post Code:</label>
                <input type="text" id="post-code" name="post-code" placeholder="12345" required>

                <label for="region-state">Region / State:</label>
                <input type="text" id="region-state" name="region-state" placeholder="Region" required>

                <label for="country">Country:</label>
                <input type="text" id="country" name="country" placeholder="Country" required>

                <button type="button" onclick="addAddress()">Add Address</button>
            </form>
        </div>

        <div id="orders-list" class="profile-box">
            <h2>Orders List</h2>
            <!-- Orders list content -->
        </div>

        <div id="cart-list" class="profile-box">
            <h2>Cart List</h2>
            <!-- Cart list content -->
        </div>

        <div id="wishlist" class="profile-box">
            <h2>Wishlist</h2>
            <!-- Wishlist content -->
        </div>

        <div id="coupons" class="profile-box">
            <h2>Coupons</h2>
            <table>
                <tr>
                    <th>Coupon Code</th>
                    <th>Apply</th>
                </tr>
                <tr>
                    <td>ABC123</td>
                    <td><button onclick="applyCoupon('ABC123')">Apply</button></td>
                </tr>
                <tr>
                    <td>XYZ456</td>
                    <td><button onclick="applyCoupon('XYZ456')">Apply</button></td>
                </tr>
                <tr>
                    <td>123DEF</td>
                    <td><button onclick="applyCoupon('123DEF')">Apply</button></td>
                </tr>
            </table>
        </div>

        <div id="wallet" class="profile-box">
            <h2>Wallet</h2>
            <table>
                <tr>
                    <th>Wallet Address</th>
                </tr>
                <tr>
                    <td>0xAbCdEfGhIjKlMnOpQrStUvWxYz</td>
                </tr>
            </table>

            <h3>Payment History</h3>
            <table>
                <tr>
                    <th>Details</th>
                    <th>Value</th>
                </tr>
                <tr>
                    <td>Payment Status</td>
                    <td>Payment successful</td>
                </tr>
                <tr>
                    <td>Transaction Number</td>
                    <td>231204171376284</td>
                </tr>
                <tr>
                    <td>Amount Paid</td>
                    <td>INR 4000</td>
                </tr>
                <tr>
                    <td>Invoice Number</td>
                    <td>BCT-23/24-002403</td>
                </tr>
            </table>
        </div>
    </div>

    <script>
        function showSection(sectionId) {
            // Hide all sections
            var sections = document.getElementsByClassName('profile-box');
            for (var i = 0; i < sections.length; i++) {
                sections[i].style.display = 'none';
            }

            // Show the selected section
            var selectedSection = document.getElementById(sectionId);
            if (selectedSection) {
                selectedSection.style.display = 'block';
            }
        }

        function addAddress() {
            // Add logic to handle adding a new address
            alert('New address added successfully!');
        }

        function applyCoupon(couponCode) {
            // Add logic to handle coupon application
            alert('Applying coupon: ' + couponCode);
        }

        function togglePasswordVisibility(passwordFieldId) {
            var passwordField = document.getElementById(passwordFieldId);
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
            } else {
                passwordField.type = 'password';
            }
        }
    </script>

</body>
</html>
