<%-include('header')-%>


            <!-- Table Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">


                    




                        <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4">Users List</h6>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">user name</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% users.forEach((data, index) => { %>
                                            <tr>
                                                <td scope="row"><%= index + 1 %></td>
                                                <td><%= data.name %></td>
                                                <td><%= data.email %></td>
                                                <td>
                                                    <% if (data.isBlocked == false) { %>
                                                        <button class="btn btn-info block-btn" data-user-id="<%= data._id %>">Block</button>
                                                    <% } else { %>
                                                        <button class="btn btn-info unblock-btn" data-user-id="<%= data._id %>">Unblock</button>
                                                    <% } %>
                                                </td>
                                                <!-- <td>
                                                    <a href="/adminhome/update/<%= data._id %>"><button class="btn btn-info">Edit</button></a>
                                                </td> -->

                                            </tr>
                                        <% }); %>
                                        
                                    </tbody>
                                </table>
                                <ul class="pagination">
                                    <% for(let i = 1; i <= totalPages; i++) { %>
                                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                        </li>
                                    <% } %>
                                </ul>
                            </div>
                        </div>
                </div>
            </div>
            <!-- Table End -->

            <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
            <script>
                // Function to handle block action
                document.querySelectorAll('.block-btn').forEach(btn => {
                    btn.addEventListener('click', function() {
                        const userId = this.getAttribute('data-user-id');
                        swal({
                            title: 'Are you sure?',
                            text: 'Do you want to block this user?',
                            icon: 'warning',
                            buttons: ['Cancel', 'Block'],
                            dangerMode: true,
                        }).then((willBlock) => {
                            if (willBlock) {
                                window.location.href = `/admin/blocked/${userId}`;
                            }
                        });
                    });
                });
            
                // Function to handle unblock action
                document.querySelectorAll('.unblock-btn').forEach(btn => {
                    btn.addEventListener('click', function() {
                        const userId = this.getAttribute('data-user-id');
                        swal({
                            title: 'Are you sure?',
                            text: 'Do you want to unblock this user?',
                            icon: 'warning',
                            buttons: ['Cancel', 'Unblock'],
                            dangerMode: true,
                        }).then((willUnblock) => {
                            if (willUnblock) {
                                window.location.href = `/admin/unblocked/${userId}`;
                            }
                        });
                    });
                });
            </script>
           
        <!-- Content End -->
        <%-include('footer')-%>