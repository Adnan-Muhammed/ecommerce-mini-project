            <div class="bg-light rounded h-100 p-4">
                <%if(locals.productList){%>
                <h6 class="mb-4">Users List</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">index</th>
                                <th scope="col">Product name</th>
                                <th scope="col">image</th>
                                <th scope="col">price</th>
                                <th scope="col">stock</th>
                                <th scope="col">category</th>
                                <th scope="col">description</th>
                                <th scope="col">action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%productList.forEach((product,index)=>{%>
                                <tr>
                                    <td><%=index +1%></td>
                                    <td><%=product.name%></td>
                                   <td>
                                    <img  
                                    src="<%=product.image[0]%>" 
                                    class="img-fluid  mx-auto mb-4"
                                    style="width: 100px; height: 100px;"
                                    alt="">
                                   </td>
                                        <td><%=product.price%></td>
                                        <td><%=product.stock%></td>
                                        <td><%=product.categoryName%></td>
                                        <td><%=product.description%></td>
                                        <td>
                                            <% if (product.isAvailable == true) { %>
                                                <button class="btn btn-info block-btn" data-user-id="<%= product._id %>">Available</button>
                                            <% } else { %>
                                                <button class="btn btn-info unblock-btn" data-user-id="<%= product._id %>">unAvailable</button>
                                            <% } %>
                                        </td>
                                        <td>
                                            <a href="/admin/productUpdate/<%= product._id %>"><button class="btn btn-info">Edit Product</button></a>
                                        </td>
                                </tr>
                            <%})%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div> 
        
        




    <%}else{%>
        <h1>no data</h1>
        <%}%>
    
</div>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
    // Function to handle block action
    document.querySelectorAll('.block-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const userId = this.getAttribute('data-user-id');
            swal({
                title: 'Are you sure?',
                text: 'Do you want to block this user?',
                icon: 'warning',
                buttons: ['Cancel', 'Block'],
                dangerMode: true,
            }).then((willBlock) => {
                if (willBlock) {
                    window.location.href = `/admin/blocked/${userId}`;
                }
            });
        });
    });

    // Function to handle unblock action
    document.querySelectorAll('.unblock-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const userId = this.getAttribute('data-user-id');
            swal({
                title: 'Are you sure?',
                text: 'Do you want to unblock this user?',
                icon: 'warning',
                buttons: ['Cancel', 'Unblock'],
                dangerMode: true,
            }).then((willUnblock) => {
                if (willUnblock) {
                    window.location.href = `/admin/unblocked/${userId}`;
                }
            });
        });
    });
</script>
   




   

