<%- include('header') %>



<% function formatDate(date) {%>
    <% const options = { month: 'short', day: 'numeric', year: 'numeric' };%>
    <% return date.toLocaleDateString('en-US', options);%>
 <%} %>
 
<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
        <div class="row g-4">

         




            <div class="bg-light rounded h-100 p-4">
                <%if(locals.productList){%>
                <h6 class="mb-4">Users List</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" style="width: 10px;">Index</th>
                                <th scope="col" style="width: 100px;">Name</th>
                                <th scope="col" style="width: 100px;">Image</th>
                                <th scope="col" style="width: 20px;">Price</th>
                                <th scope="col" style="width: 10px;">Stock</th>
                                <th scope="col" style="width: 100px;">Category</th>
                                <th scope="col"  style="width: 100px;">Description</th>
                                <th scope="col" style="width: 100px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%productList.forEach((product,index)=>{%>
                                <tr>
                                    <td style="height: 30px;"><%=index +1%></td>
                                    <td><%=product.name%></td>
                                   <td>
                                    <img  
                                    src="<%=product.image[0]%>" 
                                    class="img-fluid  mx-auto mb-4"
                                    style="width: 100px; height: 100px;"
                                    alt="">
                                   </td>
                                        <td>
                                            <%=product.price%>
                                            <br>
                                            <%if(product.discountPercentage){%>
                                                <%=product.discountPercentage%>%
                                            <%}else{%>
                                                no current offer
                                                <%}%>
                                                <%if(product.expiryDate){%>
                                                    <br>
                                                    <%=formatDate(product.expiryDate)%>
                                                    <br>
                                                <%}%> 
                                                
                                        </td>
                                        <td><%=product.stock%></td>
                                        <td>
                                            <%=product.categoryId.name%>
                                            <br>


                                            <%if(product.categoryId.discountPercentage){%>
                                                <%=product.categoryId.discountPercentage%>%
                                            <%}else{%>
                                                no current offer
                                                <%}%>
                                                <%if(product.categoryId.startDate){%>
                                                    <br>
                                                    <%=formatDate(product.categoryId.startDate)%>
                                                    <br>
                                                    <%=formatDate(product.categoryId.endDate)%>
                                                <%}if (product.categoryId.discountPercentage && !product.categoryId.startDate){%>
                                                    <br>
                                                    permanent offer
                                                  <%}%>

                                        </td>
                                        
                                        <td><%=product.description%></td>

                                        <td style="width: 90px;">
                                            <% if (product.isAvailable == false) { %>
                                                <a  class="btn btn-info block-btn mb-2" data-product-id="<%= product._id%>"  >to List</a>
                                            <% } else { %>
                                                <a class="btn btn-info unblock-btn mb-2" data-product-id="<%= product._id %>" style="width: 90px;" >to unList</a>
                                            <% } %>
                                            <a href="/admin/productUpdate/<%= product._id %>"><button class="btn btn-info mb-2">Edit</button></a>
                                            <a  class="btn btn-info delete-btn mb-2" data-product-id="<%= product._id%>" >Delete</a>

                                        </td>
                                </tr>
                            <%})%>
                        </tbody>
                    </table>
                    <ul class="pagination">
                        <% for(let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div> 
        




    <%}else{%>
        <h1>no data</h1>
        <%}%>
    
</div>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
    // Function to handle block action
    document.querySelectorAll('.block-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const productId = this.getAttribute('data-product-id');
            swal({
                title: 'Are you sure?',
                text: 'Do you want to list this user?',
                icon: 'warning',
                buttons: ['Cancel', 'list'],
                dangerMode: true,
            }).then((willBlock) => {
                if (willBlock) {
                    window.location.href = `/admin/list/product/${productId}`;
                }
            });
        });
    });

    // Function to handle unblock action
    document.querySelectorAll('.unblock-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const productId = this.getAttribute('data-product-id');
            swal({
                title: 'Are you sure?',
                text: 'Do you want to unlist this product?',
                icon: 'warning',
                buttons: ['Cancel', 'unlist'],
                dangerMode: true,
            }).then((willUnblock) => {
                if (willUnblock) {
                    window.location.href = `/admin/unlist/product/${productId}`;
                }
            });
        });
    });



    document.querySelectorAll('.delete-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const productId = this.getAttribute('data-product-id');
            swal({
                title: 'Are you sure?',
                text: 'Do you want to delete this product?',
                icon: 'warning',
                buttons: ['Cancel', 'Delete'],
                dangerMode: true,
            }).then((willBlock) => {
                if (willBlock) {
                    window.location.href = `/admin/delete/product/${productId}`;
                }
            });
        });
    });
    
</script>
   




   

<%- include('footer') %>
