    <script src="/admin-style/js/main.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var ctx = document.getElementById('monthly-yearly-sales-chart').getContext('2d');
            var monthlyData = {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                datasets: [{
                    label: 'Monthly Sales',
                    data: [5, 10, 15, 20, 25, 30, 35, 40, 45, 50, 55, 60],
                    backgroundColor: 'rgba(0, 156, 255, .7)'
                }]
            };
            var yearlyData = {
                labels: ['2020', '2021', '2022', '2023', '2024'],
                datasets: [{
                    label: 'Yearly Sales',
                    data: [150, 180, 220, 250, 280],
                    backgroundColor: 'rgba(255, 99, 132, 0.7)'
                }]
            };

            
            var chart = new Chart(ctx, {
                type: 'bar',
                data: monthlyData,
                options: {
                    responsive: true,
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });


            document.getElementById('sales-filter').addEventListener('change', function() {
                var filter = this.value;
                if (filter === 'yearly') {
                    chart.data = yearlyData;
                } else if (filter === 'monthly') {
                    chart.data = monthlyData;
                }
                chart.update();
            });
        });
    </script>
